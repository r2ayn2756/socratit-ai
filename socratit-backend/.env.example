# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/socratit_dev

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Configuration (AWS SES)
EMAIL_FROM=noreply@socratit.ai
EMAIL_PROVIDER=ses
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Redis Configuration (Optional - set to true if you have Redis installed)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
# Development: Set to 1000+ to disable rate limiting for easier testing
# Production: Set to 100-200 for security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# AI Configuration
AI_PROVIDER=gemini

# Gemini (Primary AI Provider)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash-exp

# Anthropic Claude (Backup)
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-3-haiku-20240307

# OpenAI (Legacy/Backup - Optional)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# File Upload Configuration
MAX_FILE_SIZE=104857600  # 100MB (increased from 10MB to support larger curriculum files)
UPLOAD_DIR=./uploads
AWS_S3_BUCKET=socratit-files

# Security
BCRYPT_ROUNDS=12
EMAIL_VERIFICATION_EXPIRY=3600000
PASSWORD_RESET_EXPIRY=3600000

# Audit & Compliance
AUDIT_LOG_RETENTION_DAYS=2555
UNVERIFIED_ACCOUNT_CLEANUP_DAYS=7
